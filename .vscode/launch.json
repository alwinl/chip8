{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug chemul8",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/.build/chemul8/ui/chemul8",
			"args": [
				"./chemul8/test/chip8-test-suite.ch8"
			],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Debug Google Test",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/.build/chicom8/test/chip8_compiler_test", // <- path to your test binary
			"args": [
				"--gtest_filter=ParserTest.ParseFullProgram"
			], // <- optional filter
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb", // or "lldb" or "lldb-mi" for clang/MacOS
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Debug EBNF Test",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/.build/chicom8/test/ebnf_compiler_test", // <- path to your test binary
			// "args": ["--gtest_filter=ParserTest.ParseFullProgram"],      // <- optional filter
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb", // or "lldb" or "lldb-mi" for clang/MacOS
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Run EBNF Compiler",
			"type": "cppdbg",
			"request": "launch",
			"program": "/bin/bash",
			"args": [
				"-c",
				"${workspaceFolder}/.build/chicom8/tools/ebnf_compiler > ${workspaceFolder}/chicom8/src/ast.h"
			],
			"cwd": "${workspaceFolder}",
			"stopAtEntry": false,
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb"
		},
		{
			"name": "Debug EBNF Compiler",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/.build/chicom8/tools/ebnf_compiler",
			"args": [
				"--tarjan",
				"ebnf_tarjan.txt",
				"${workspaceFolder}/chicom8/tools/ebnf.bnf"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb", // or "lldb" or "lldb-mi" for clang/MacOS
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}